	<script type="text/javascript">
		function verify() {
			var a = document.getElementById("mail").innerHTML;
			if (a.indexOf("enter email") != -1) {
				document.getElementById("mail").innerHTML = "";
			}
		}
		function run() {
			var a = document.getElementById("mail").value;
			if (a.indexOf("@") == -1 || a.indexOf(".") == -1 || a.indexOf(" ") != -1) {
				alert("Invalid email id");
			}
			else {
				alert("Thank you");
			}
		}
